<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="false"
    android:layout_alignParentTop="false"
    android:layout_centerHorizontal="false"
    tools:context="com.example.martinartime.lightsaberapp.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="23dp">

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:elevation="8dp"
            android:padding="5dp"
            app:cardElevation="18dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="27dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_dark">

                <ImageView
                    android:id="@+id/colores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/color" />

                <TextView
                    android:id="@+id/cambiar_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/colores"
                    android:layout_centerHorizontal="true"
                    android:text="@string/cambiar_colores"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.075" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:elevation="8dp"
            android:padding="5dp"
            app:cardElevation="18dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="27dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_dark">

                <ImageView
                    android:id="@+id/luz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/luz" />

                <TextView
                    android:id="@+id/ajustar_luz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/luz"
                    android:layout_centerHorizontal="true"
                    android:text="@string/ajustar_luz"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.075" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:elevation="8dp"
            android:padding="5dp"
            app:cardElevation="18dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="27dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_dark">

                <ImageView
                    android:id="@+id/vibrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/vibracion" />

                <TextView
                    android:id="@+id/hacer_vibrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vibrar"
                    android:layout_centerHorizontal="true"
                    android:text="@string/activar_vibracion"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.075" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
