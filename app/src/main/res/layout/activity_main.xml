<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="false"
    android:layout_alignParentTop="false"
    android:layout_centerHorizontal="false"
    tools:context="com.example.martinartime.lightsaberapp.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:padding="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardColores"
                android:layout_width="165dp"
                android:layout_height="125dp"
                android:layout_marginRight="5dp"
                android:elevation="8dp"
                android:padding="5dp"
                app:cardElevation="18dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="27dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@android:color/holo_blue_dark">

                    <ImageView
                        android:id="@+id/colores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/color" />

                    <TextView
                        android:id="@+id/cambiar_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/colores"
                        android:layout_centerHorizontal="true"
                        android:text="@string/cambiar_colores"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.068"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.075" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardLuz"
                android:layout_width="165dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:elevation="8dp"
                android:padding="5dp"
                app:cardElevation="18dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="27dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@android:color/holo_blue_dark">

                    <ImageView
                        android:id="@+id/luz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/luz" />

                    <TextView
                        android:id="@+id/ajustar_luz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/luz"
                        android:layout_centerHorizontal="true"
                        android:text="@string/ajustar_luz"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.068"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.075" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cardDatos"
                android:layout_width="165dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:padding="5dp"
                app:cardElevation="18dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="27dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@android:color/holo_blue_dark">

                    <ImageView
                        android:id="@+id/datos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/datos" />

                    <TextView
                        android:id="@+id/ver_datos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_below="@+id/datos"
                        android:layout_centerHorizontal="true"
                        android:text="@string/ver_datos"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.068"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.075" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
